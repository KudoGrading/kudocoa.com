{
  "homepage": "https://kudocoa.com",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --cache",
    "lint:all": "eslint .",
    "lint:fix": "eslint . --fix --cache",
    "lint:fix-all": "eslint . --fix",
    "build": "npm run build:css && npm run build:js",
    "build:css": "scss-to-css src/server/styles public/css --clone-folders",
    "build:js": "minify-js src/client public/js --clone-folders",
    "debug": "node utils/dev/debug.js",
    "debug:nb": "node utils/dev/debug.js --nb",
    "dev": "npm run build && npm run dev:nb",
    "dev:nb": "wrangler dev --remote --ip localhost --port 8888",
    "deploy": "npm run build && wrangler deploy",
    "deploy:nb": "wrangler deploy"
  },
  "devDependencies": {
    "@adamlui/minify.js": "^1.9.0",
    "@adamlui/scss-to-css": "^1.12.0",
    "@eslint/css": "^0.14.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-yml": "^1.19.1",
    "husky": "^9.1.7",
    "open": "^11.0.0",
    "wrangler": "^4.54.0"
  }
}
